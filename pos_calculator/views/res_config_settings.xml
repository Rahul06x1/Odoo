<?xml version="1.0" encoding="UTF-8" ?>
<odoo>


    <record id="pos_res_config_settings_inherit" model="ir.ui.view">
        <field name="name">pos.calculator.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">

            <xpath expr="//div[@data-key='point_of_sale']" position="inside">
                <h2>Others</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box" title="">
                        <div class="o_setting_right_pane">
                            <label for="virtual_calculator"/>
                            <div class="text-muted">
                                Use a virtual calculator for instant calculations
                            </div>
                            <div class="content-group">
                                <div class="mt16">
                                    <field name="virtual_calculator"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>


        </field>
    </record>


</odoo>